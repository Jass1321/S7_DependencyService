<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S7_DependencyService.DS_1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="🤯" />
            <Entry x:Name="txtTexto" Placeholder="Ingresar texto"/>
                <Button HorizontalOptions="Center" Text="Hablar" Clicked="BtnClicked"/>
            <Slider MaximumTrackColor="Black" 
                    MinimumTrackColor="DarkSlateGray"
                    ThumbColor="DarkSlateGray"
                    Minimum="0" Maximum="1" Value="1" 
                    x:Name="sliderVolumen"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>